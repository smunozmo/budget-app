<% provide(:title, "New Category") %>
<section class="recipe_new_main_container">
  <%= form_with model: @group, url: user_create_group_path(user_id: @user), method: :post, class: 'recipe_new_form' do |f| %>
      <%= f.label :name, class: 'recipe_new_title_label' %>
      <%= f.text_field :name, :required => true, class: 'recipe_new_title_input' %>
      <%= f.label :icon, class: 'recipe_new_title_label' %>
      <%= f.text_field :icon, :required => true, class: 'recipe_new_title_input' %>
      <%= f.submit "Add Category", class: 'recipe_new_submit_btn' %>
  <% end %>
</section>